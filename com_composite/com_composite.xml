<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">
	<name>Composite</name>
	<author>Red Snapper Ltd</author>
	<creationDate>29 April 2014</creationDate>
	<version>2014.051401</version>
	<copyright>Copyright Â©2013-2014 Red Snapper Ltd. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>web@redsnapper.net</authorEmail>
	<authorUrl>www.redsnapper.net</authorUrl>
	<description>Using a menu as a menu-item, composite renders all the menu-items</description>
	<files folder="site">
		<filename>index.html</filename>
		<filename>composite.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>
	<languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.com_composite.ini</language>
    </languages>
	<administration>
		<files folder="admin">
			<filename>composite.php</filename>
			<filename>index.html</filename>
			<folder>models</folder>
		</files>
		<languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_composite.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_composite.sys.ini</language>
        </languages>
	</administration>
</extension>
