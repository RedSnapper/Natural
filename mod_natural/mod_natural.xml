<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">
	<name>Natural</name>
	<author>Ben Griffin</author>
	<version>2014.042301</version>
	<creationDate>23 April 2014</creationDate>
	<copyright>Copyright Â©2013-2014 Red Snapper Ltd.</copyright>
	<version>2014.042301</version>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>The Natural View module. Depends upon Natural</description>
	<files>
		<filename>mod_natural.xml</filename>
		<filename module="mod_natural">mod_natural.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_natural.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_natural.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="strip"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="Strip tabs and newlines"
					description="Remove all newlines/tabs from result"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="control">
				<field name="Control" class="syntax-php" type="editor" width="100%" height="314px" filter="raw" />
			</fieldset>
			<fieldset name="view">
				<field name="View" class="syntax-xml" type="editor" width="100%" height="300px" filter="raw" />
			</fieldset>
		</fields>
	</config>
</extension>
